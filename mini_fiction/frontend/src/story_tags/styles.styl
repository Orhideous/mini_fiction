background = #fff

.tags-container
  display flex
  flex-wrap wrap
  align-items flex-start

  margin-bottom 1em
  padding 0.3em 0.5em

  background-color background
  border 1px solid #ccc
  box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
  min-height 2.5em
  width 530px
  border-radius 0.25em

.tag-block
  margin 0.15em
  padding 0.5em

.tag-item
  border-radius 0.25em
  font-weight bold
  line-height 1em
  color background
  white-space nowrap
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
  span
    color #bd362f
    &::before
      content " Ã—"

.tag-item-type-default
  background-color #999999

.tag-remove
  cursor pointer
  font-weight bold

.dropdown-container
  margin 0.15em
  border 1px solid
  position absolute
  z-index 1000
  background background

.dropdown-list
  padding 0.3em
  display flex
  flex-direction column

.dropdown-item
  border 1px solid blue
  margin 0.15em 0

$background = #fff
$base_filters = saturate(96%)
$highlight_filters = saturate(104%) brightness(104%)

tag_box() {
  min-height 2.5em
  background-color $background
  border 1px solid #ccc
  border-radius 0.25em
  box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075)
}

.tags-container
  display flex
  flex-wrap wrap
  align-items flex-start

  margin-bottom 1em
  padding 0.3em 0.5em
  tag_box()

  width 80%

.tag-block
  margin 0.15em
  padding 0.5em

.tag-item
  border-radius 0.25em
  font-weight bold
  line-height 1em
  color $background
  white-space nowrap
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.25)
  filter $base_filters
  span
    &::before
      content " Ã—"
  &:hover
    filter $highlight_filters

.tag-item-type-default
  background-color #999999

.tag-remove
  cursor pointer
  font-weight bold

.react-autosuggest__suggestions-container
  margin 0.15em
  position absolute
  z-index 1000
  visibility hidden
  tag_box()

.react-autosuggest__suggestions-container--open
  visibility visible

.react-autosuggest__suggestions-list
  padding 0.3em
  display flex
  flex-direction column
  list-style none
  margin 0

.react-autosuggest__suggestion--highlighted
  filter $highlight_filters
